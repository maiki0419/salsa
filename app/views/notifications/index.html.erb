<% notifications = @notifications.where.not(visitor_id: current_customer.id) %>
<div class="container">
  <h2 class="caption mx-auto text-center mt-5 mb-5">通知一覧</h2>
  <div class="col-md-7 mx-auto notifications-section-bg">
    <% if notifications.exists? %>
      <%= render notifications %>
    <%= paginate notifications %>
    <% else %>
      <p class="text-center">通知はありません</p>
    <% end %>
  </div>
</div>
