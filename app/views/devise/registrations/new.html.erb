
<div class="container">
    <div class="row mb-3 mt-5">
      <h2 class="mx-auto">新規登録</h2>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%= render "layouts/errors", object: @customer %>
        <%= form_with model: @customer, url: customer_registration_path do |f| %>


          <div class="field">
            <%= f.label :ニックネーム %><br />
            <%= f.text_field :nickname, class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :メール %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "登録する", class:"btn btn-primary form-control mt-5" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row mt-5">
      <p class="mx-auto">既に登録がお済みの方はこちらからログインしてください</p>
    </div>
    <div class="row">
      <div class="mx-auto mt-3">
        <%= link_to "ログイン", new_customer_session_path, class:"btn btn-primary" %>
      </div>
    </div>
</div>


