
<div class="container">
    <div class="row mb-3 mt-5">
      <h2 class="mx-auto">ログイン</h2>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%= form_with model: @customer, url: customer_session_path do |f| %>
          <div class="field">
            <%= f.label :メール %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
          </div>

          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-primary form-control " %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row mt-5">
      <p class="mx-auto">登録がお済みでない方はこちらから新規登録を行ってください</p>
    </div>
    <div class="row">
      <div class="mx-auto mt-3">
        <%= link_to "新規登録", new_customer_registration_path, class:"btn btn-primary" %>
      </div>
    </div>
</div>

