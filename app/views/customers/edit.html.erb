<div class="container">
  <h2 class="text-center">プロフィール編集</h2>



  <div class="row">
    <div class="col-md-5 mx-auto">
      <%= render "layouts/errors", object: @customer %>
      <%= form_with model: @customer, url:customer_path(@customer.id), method: :patch, local:true do |f| %>

        <%= f.label :"ニックネーム(必須)", class:"mt-5" %>
        <%= f.text_field :nickname, class:"form-control" %>

        <%= f.label :"プロフィール画像", class:"mt-3"  %>
        <%= f.file_field :profile_image, accept: "image/*", class:"d-block" %>

        <%= f.label :"活動エリア", class:"mt-3" %>
        <%= f.text_field :prefecture_id, class:"form-control", placeholder:"都道府県" %>

        <%= f.text_field :city, class:"form-control mt-3", placeholder:"市区町村" %>

        <%= f.label :"性別", class:"mt-3" %>
        <%= f.text_field :gender_id, class:"form-control" %>

        <%= f.label :"年齢", class:"mt-3" %>
        <%= f.text_field :age, class:"form-control" %>

        <%= f.label :"自己紹介", class:"mt-3" %>
        <%= f.text_area :introduction, class:"form-control" %>

        <%= f.submit "更　新", class:"btn btn-success form-control mt-3" %>

      <% end %>
    </div>
  </div>
</div>