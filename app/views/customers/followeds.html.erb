<div class="container">
  <h2 class="text-center mb-5">フォロワー一覧</h2>
  <table class="table">
    <tdoby>
      <% @followeds.each do |followed| %>
        <tr>
          <td>
            <%= image_tag followed.get_profile_image("100x100") %>
          </td>
          <td>
            <%= link_to followed.nickname, customer_path(followed.id) %>
          </td>
          <td>
            <div id="follow_<%= followed.id %>">
              <%= render "relationships/follow", customer: followed %>
            </div>
          </td>
        </tr>
      <% end %>
    </tdoby>
  </table>
</div>