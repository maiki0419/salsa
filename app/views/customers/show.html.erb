<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="d-flex">
       <div>
          <%= image_tag @customer.get_profile_image("150x150") %>
        </div>
        <div class="ml-3 mt-2">
          <%= link_to "フォロー", root_path, class:"btn btn-sm btn-primary mt-5" %><br>
          <%= link_to "チャット", root_path, class:"btn btn-sm btn-primary mt-2" %>
        </div>
      </div>
      <div class="ml-3">
        <%= link_to "フォロー", followers_customer_path(@customer.id) %><%= @customer.followers.count %>
        <%= link_to "フォロワー", followeds_customer_path(@customer.id),class:"ml-3" %><%= @customer.followeds.count %>
      </div>
      <p class="mt-3"><%= @customer.nickname %>さんのプロフィール<%= link_to "編集", edit_customer_path(@customer.id), class:"btn btn-sm btn-success ml-3" %></p>
      <table class="table">
        <tbody>
          <tr>
            <th>活動エリア</th>
            <td colspan="2"><%= @customer.prefecture_id %><<%= @customer.city %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td colspan="2"><%= @customer.gender_id %></td>
          </tr>
          <tr>
            <th>年齢</th>
            <td colspan="2"><%= @customer.age %></td>
          </tr>
           <tr>
            <th>自己紹介</th>
            <td colspan="2"><%= @customer.introduction %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-7 offset-md-1 mx-auto">
      <% if @customer_teams.present? %>
       <div class="text-center">
          <h3>マイチーム</h3>
          <ul class="list-group">
            <% @customer_teams.each do |team_id| %>
              <% @team = Teams.find(team_id) %>
              <li class="list-group-item"><%= link_to @team.name, team_path(@team.id) %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="text-center">
        <h3>お気に入り投稿</h3>
      </div>
    </div>
  </div>
</div>