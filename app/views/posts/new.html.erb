<div class="container">
    <h2>投稿作成</h2>

    <%= render "layouts/errors", object: @post %>

    <%= form_with model: @post, url: posts_path, method: :post, local:true do |f| %>
      <div class="row">
        <div class="col-md-6">


          <%= f.label :"投稿の種類(必須)", class:"mt-3" %><br>
          <%= f.select :post_categroy, [["対戦相手募集","対戦相手募集"], ["チームメンバー募集","チームメンバー募集"], ["助っ人募集","助っ人募集"]], class:"ml-3" %><br>

          <%= f.label :"チーム名", class:"mt-2" %><br>
          <%= f.select :team_id, @teams.map{ |team| [team.team_name(team.team.id), team.team_id] }  %><br>

          <%= f.label :"タイトル(必須)", class:"mt-2" %>
          <%= f.text_field :title, class:"form-control" %>

          <%= f.label :"タグ(,で区切ると複数登録できます)", class:"mt-2" %>
          <%= f.text_field :name, class:"form-control", placeholder: "例)初心者歓迎,エンジョイ" %>

          <%= f.label :"活動エリア(必須)", class:"mt-2" %>
          <%= f.text_field :prefecture_id, class:"form-control", placeholder:"都道府県" %>

          <%= f.text_field :city, class:"form-control mt-4", placeholder:"市区町村" %>


        </div>

        <div class="col-md-6">

          <%= f.label :"開催日", class:"mt-3" %>
       　  <%= f.text_field :start_date, class:"form-control" %>

          <%= f.label :"募集期限(必須)", class:"mt-3" %>
          <%= f.text_field :deadline, class:"form-control" %>

          <%= f.label :"定員", class:"mt-3" %>
          <%= f.text_field :capacity, class:"form-control" %>

          <%= f.label :"会場", class:"mt-3"  %>
          <%= f.text_field :place, class:"form-control" %>

          <%= f.label :"内容", class:"mt-3" %>
          <%= f.text_area :body, class:"form-control" %>

        </div>
      </div>

      <div class="col-5 mx-auto">
        <%= f.submit "投稿", class:"btn btn-primary form-control mt-3" %>
      </div>

    <% end %>
</div>